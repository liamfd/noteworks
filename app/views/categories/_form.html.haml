= simple_form_for @category, remote: true do |f|

  -if @category.errors.any?
    .error_explanation
      %h2 "#{pluralize(@category.errors.count, "error")} prohibited this node from being saved:"

      %ul
      -@category.errors.full_messages.each do |msg|
        %li= msg
        
  .field
    =f.label :name
    =f.text_field :name

  .field
    =f.label :color
    =f.text_field :color
    
  =f.hidden_field :work_id, :value => @work.id

  .actions
    = f.submit

  #spinner.spinner
    = image_tag "ajax-loader.gif"
  #response