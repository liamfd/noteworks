- @categories.each do |cat|
	%li.cat_wrapper{id:"category-#{cat.id}"}
		%ul.button-group
			%li
				=link_to(cat.name,  edit_category_path(cat), {:class=> ["edit-link", "button"] , data:{"reveal-id" => "myModal", "reveal-ajax" => true}, style:"background-color:#{cat.color}"})
			%li
				=link_to("x", category_path(cat), method: :delete, :class=> ["delete-link", "button"] , style:"background-color:#{cat.color}", remote: true)
%li.cat_wrapper{class: "large-2 columns", id:"new_category"}
	=link_to('New!', new_category_path, {data:{"reveal-id" => "myModal", "reveal-ajax" => true}})

