-if @group == nil
	-@group = locals[:group]

-@group.works.each do |work|
	%ul.button-group
		%li
			=link_to work.name, work_takenotes_path(work), {class:"work-button"}

		%li
			= link_to(work_path(work, :group_id => @group.id), method: :delete, :class=> [ "group-mod-button"] , remote: true) do
				%i{class:"fi-x"} 
=link_to('New!', new_work_path(:group_id => @group.id), {data:{"reveal-id" => "groupModal", "reveal-ajax" => true}})